@import '../../style/weui.wxss';
@import '../../style/iconfont.wxss';
.weui-loadmore {
  width: 100%;
  font-size: 25rpx;
  text-align: center;
  margin:0.5em auto;
}

.weui-loading {
  width: 50rpx;
  height: 50rpx;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}

.weui-loadmore-tips {
  display: inline-block;
  vertical-align: middle;
}

.bigclass-list .bigclass-item {
  position: relative;
  width: 100vw;
  border-bottom: 2rpx solid #E9E9E9;
  box-sizing: border-box;
  background: #fff;
}

.bigclass-list .bigclass-item movable-area {
  height: 120rpx;
  width: calc(100vw - 120rpx);
}

.bigclass-list .bigclass-item movable-view {
  height: 120rpx;
  width: 100vw;
  background: #fff;
  z-index: 2;
}

.bigclass-list .bigclass-item .delete-btn {
  position: absolute;
  top: 0;
  bottom: 0;
  right: 0; 
  width: 120rpx;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #FFFFFF;
  line-height: 120rpx;
  z-index: 1;
  background: #E66671;
  text-align: center;
}

.bigclass-list .bigclass-item-wrap {
  position: relative;
  display: flex;
  height:100%;
  align-items: center;
  padding: 0rpx 0 0rpx 20rpx;
  box-sizing: border-box;
}

.bigclass-list .bigclass-add-wrap{
  position: relative;
  display: flex;
  height:120rpx;
  align-items: center;
  padding: 0rpx 0 0rpx 20rpx;
  box-sizing: border-box;
}

.icon-quxiao{
  color: red;
  font-size: 42rpx;
}

.icon-yixuanze{
  color: #2aa515;
  font-size: 42rpx;
}

.bigclass-list .bigclass-add-wrap .bigclass-add-item{
  flex: 8;
  overflow: hidden;
  display: flex;
}

.bigclass-add-item-name{
  width: 100%;
}

.bigclass-list .bigclass-add-wrap .bigclass-add-item-cancel{
  flex: 1;
  overflow: hidden;
  display: flex;
}

.bigclass-list .bigclass-add-wrap .bigclass-add-item-sure{
  flex: 1.5;
  overflow: hidden;
  display: flex;
  justify-content:center;
}

.bigclass-list .bigclass-item-wrap .bigclass-movable-item {
  flex: 1.5;
  overflow: hidden;
  display: flex;
}

.bigclass-list .bigclass-item-wrap .bigclass-movable-item-name {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #71747A;
  margin-right: 10rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  align-items: center;
  justify-items: center;
  flex: 7;
}
.bigclass-list .bigclass-item-wrap .bigclass-movable-item-totop{
  flex: 3;
}

.bigclass-list .bigclass-item-wrap .bigclass-movable-item-amount {
  flex: 0 0 auto;
  padding-right: 80rpx;
  position: relative;
}


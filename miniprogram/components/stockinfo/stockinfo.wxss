@import '../../style/weui.wxss';
@import "../../component/price/price.wxss";
.stockinfo-main{
  position: relative;
  overflow-x: hidden;
  width: 750rpx;
}

.stockinfo-left-wrap{
    position: fixed;
    top: 100px;
    bottom: 0;
    left: 0;
    width: 160rpx;
}

.stockinfo-left{
    height: 100%;
    background: rgba(247,247,247,1);
}

.bigclass-item {
    width: 100%;
    font-size: 26rpx;
    font-weight: 400;
    color: rgba(102,102,102,1);
    height: 108rpx;
    display: flex;
    border-bottom: 1rpx solid rgba(237,237,237,1);
    background: rgba(247,247,247,1);
    text-align: center;
    align-items: center;
}

.bigclass-item-li {
    text-align: left;
    margin: 0 20rpx;
}

.bigclass-item-active {
    background: rgba(255,255,255,1);
    color: rgba(51,51,51,1);
    font-weight: 500;
    position: relative;
}

.stockinfo-right{
  margin-left: 160rpx;
  width: 590rpx;
}

.bigclass-item-active::before {
    display: block;
    content: '';
    position: absolute;
    width: 6rpx;
    height: 60rpx;
    background: rgba(60,185,99,1);
    top: 24rpx;
}

.weui-cells{
  margin-top: 0px;
}

.weui-loadmore{
  font-size:12px;
  margin:1.2em auto;
  line-height:0.6em;
}

::-webkit-scrollbar{
width: 0;
height: 0;
color: transparent;
}

.cargo-info-item{
  min-height:184rpx;
  padding:5px;
}

.cargo-item-image-cell{
  flex: 3;
}

.cargo-item-cell{
  display: flex;
}

.cargo-item-image{
  width: 68px;
  height: 68px;
}

.cargo-item-info{
  margin-left: 20px;
  flex: 7;
}

.cargo-name-info{
  font-size: 16px;
  text-align:left;
  white-space: nowrap;  
  text-overflow:ellipsis; 
  overflow:hidden;
}

.cargo-price-info{
  font-size: 12px;
  margin-top: 15px;
  text-align:left;
}

.product-price{
  line-height: 36rpx;
  display: inline-block;
}

.price-num {
    font-size: 26rpx;
    color: #333333;
}
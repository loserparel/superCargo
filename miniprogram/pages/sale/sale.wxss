/* pages/sale/sale.wxss */
page{height:100%;}
.foot-banner {
    display: flex;
    justify-content: space-between;
    position: fixed;
    left: 0;
    bottom: 0;
    z-index: 2;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    background: rgba(255,255,255,1);
    border-top: 1rpx solid rgba(238,238,238,1);
}

.foot-left {
    height: 100%;
    width: 540rpx;
    line-height: 90rpx;
    display: flex;
    justify-content: space-between;
}

.foot-select {
    padding: 0 20rpx;
    line-height: 92rpx;
    text-align: center;
    display: flex;
}

.foot-right {
    background-image: linear-gradient(90deg,#FF5758 0%,#EF3D3E 100%);
    width: 210rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    border-radius: 46rpx;
    margin-top: 10rpx;
    margin-right: 20rpx;
}
.weui-cells{
  margin-top: 0px;
}
.button-sp-area{
  margin-top:10px;
}
.select-all {
    display: inline-block;
    vertical-align: middle;
    font-size: 26rpx;
    color: #333333;
    margin-left: 10rpx;
}

.create-submit {
    font-size: 36rpx;
    color: #FFFFFF;
}

.price-content {
    padding: 10rpx 20rpx;
    height: 92rpx;
    width: 360rpx;
    text-align: right;
    box-sizing: border-box;
}

.price-total {
    height: 80rpx;
    line-height: 80rpx;
}

.price-total-detail {
    height: 30rpx;
    line-height: 32rpx;
}

.total-price-text {
    font-size: 26rpx;
    color: #333333;
    margin-right: 8rpx;
}

.total-price-num {
    display: inline-block;
    vertical-align: middle;
    color: #FE6263;
}

.price-total-detail .detail-price-text {
    font-size: 22rpx;
    color: #333333;
    margin-left: 10rpx;
    display: inline-block;
    vertical-align: middle;
    line-height: 22rpx;
}

.price-text-label {
    display: inline-block;
    vertical-align: top;
}

.price-total.all-in {
    height: 70rpx;
    line-height: 70rpx;
}

.weui-form__text-area{
  position: fixed;
  top: 0px;
  width: 100%;
  padding: 40px 0px 0px 0px;
  height: 70px;
  background-color:#fff; 
  z-index:2;
  border-bottom:1rpx solid rgba(238,238,238,1)
}

::-webkit-scrollbar{
width: 0;
height: 0;
color: transparent;
}

.cargo-info-item{
  min-height:124rpx;
  border-top:0px;
}

.cargo-item-image-cell{
  flex: 2;
  margin-left:20px;
}

.cargo-item-cell{
  display: flex;
  width:100%;
}

.cargo-item-image{
  width:48px;
  height: 48px;
}

.cargo-item-info{
  margin-left: 15px;
  flex: 6;
}

.cargo-name-info{
  font-size: 16px;
  text-align:left;
}

.cargo-price-info{
  font-size: 12px;
  margin-top: 15px;
  text-align:left;
  display:flex;
}

.product-price{
  line-height: 36rpx;
  display: inline-block;
  flex:5;
}

.product-num{
  line-height: 36rpx;
  display: inline-block;
  flex:5;
}
.stock-select{
  flex:1;
  margin-top:20px;
}

.kind-list__item-bd{
  z-index:3px;
  height: 100%;
  margin-top:50px;
  margin-bottom:40px;
}

.check-icon{
  color:#00CD00;
}

.count-change .count-icon {
    display: inline-block;
    text-align: center;
}

.change-input {
    display: inline-block;
    vertical-align: middle;
    width: 76rpx;
    height: 41rpx;
    line-height: 40rpx;
    border: 0;
    background: #f6f6f6;
    color: #333333;
    font-size: 24rpx;
    text-align: center;
    font-weight: bold;
}

.add-stocknum-btn{
  font-size:12px;
  color:#707070;
  margin-left:10px;
  font-weight:bold;
}

.subtract-stocknum-disable{
  font-size:12px;
  color:#cdcdcd;
  margin-right:10px;
  font-weight:bold;
}
.subtract-stocknum-able{
  font-size:12px;
  color:#707070;
  margin-right:10px;
  font-weight:bold;
}
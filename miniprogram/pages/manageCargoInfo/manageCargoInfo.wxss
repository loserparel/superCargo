@import "../../style/main.wxss";
.uploader-text, .tunnel-text {
  width: 100%;
  line-height: 30px;
  font-size: 34rpx;
}

.uploader-container {
  width: 100%;
  height: 400rpx;
  padding: 20rpx 20rpx 20rpx 0;
  display: flex;
  align-content: center;
  justify-content: center;
  box-sizing: border-box;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
}

.uploader-image {
  width: 80px;
  height: 80px;
  float: right;
  margin-right: 5px;
}

.upload-image{
  width: 80px;
  height: 80px;
  float: right;
  margin-right: 20px;
}

.delete-image{
  width: 20px;
  height: 20px;
  float: right;
  margin-right: 15px;
}
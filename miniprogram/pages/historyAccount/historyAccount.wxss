page {
  background-color: #fff;
}

.text-view {
  padding: 10px;
}

.tab-item-frame {
  background: white;
  height: 80rpx;
  z-index: 2;
  display: flex;
  flex-direction: row;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
}

.tab-selected-page {
  display: flex;
  flex: 1;
  justify-content: center;
}

.tab-selected {
  color: #3CB963;
  font-size: 14px;
  padding: 5px 15px;
  border-bottom: 6rpx solid #3CB963;
}

.tab-noselected {
  color: #333333;
  font-size: 14px;
  padding: 5px 15px;
  border-bottom: 6rpx solid transparent;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.one-product-splite {
  background: #f5f5f5;
  padding-bottom: 20rpx;
}

.product-status-msg {
  display: flex;
  padding: 30rpx;
  flex-direction: row;
  justify-content: space-between;
}

.product-name-frame {
  padding: 30rpx;
  display: flex;
  flex-direction: row;
  background: #f5f5f5;
}

.product-muti-name-frame {
  display: flex;
  flex-direction: row;
  background: #f5f5f5;
}

.product-name-frame-name {
  flex: 1;
  margin-left: 30rpx;
}

.product-name-frame-name-frame {
  display: flex;
  flex-direction: row;
}

.product-name-frame-name-frame-label {
  flex: 1;
  font-size: 26rpx;
  color: #333333;
}

.product-name-frame-detail {
  align-items: center;
  display: flex;
  flex-direction: row;
  padding: 30rpx;
  justify-content: flex-end;
}

.product-img-frame {
  display: flex;
  flex-direction: row;
  padding: 0 0 0 0;
}

.product-detail-mongy {
  display: flex;
  flex-direction: row;
  padding: 30rpx;
  justify-content: flex-end;
  alignItems: center;
  background: blue;
}

.muti-scroll-view {
  padding: 30rpx;
  display: flex;
  overflow-x: scroll;
  position: relative;
  background: #f5f5f5;
}

.muti-img-list {
  display: flex;
  width: 0rpx;
  margin-right: 20rpx;
  height: 108rpx;
}

.product-action-frame {
  background: white;
  -webkit-overflow-scrolling: touch;
  overflow-x: scroll;
  width: 100%;
  height: 90rpx;
  text-align: right;
  vertical-align: center;
  white-space: nowrap;
  justify-content: flex-end;
  border-top: 1rpx solid #eeeeee;
}

.paymoney {
  font-size: 30rpx;
  color: #333333;
}

.action-button-cancel {
  height: 58rpx;
  line-height: 90rpx;
  margin-right: 20rpx;
  color: #666666;
  font-size: 26rpx;
  padding: 9rpx 18rpx;
  border: 2rpx solid #cccccc;
  border-radius: 29rpx;
}

.action-button-evalute {
  height: 58rpx;
  line-height: 90rpx;
  margin-right: 20rpx;
  color: #3CB963;
  font-size: 26rpx;
  padding: 9rpx 18rpx;
  border: 2rpx solid #3CB963;
  border-radius: 29rpx;
}

.action-button-view-evalute {
  height: 58rpx;
  line-height: 90rpx;
  margin-right: 20rpx;
  color: #3CB963;
  font-size: 26rpx;
  padding: 9rpx 18rpx;
  border: 2rpx solid #3CB963;
  border-radius: 29rpx;
}

.action-button-pay {
  display: inline-block;
  width: 238rpx;
  height: 58rpx;
  line-height: 58rpx;
  margin-right: 20rpx;
  color: white;
  font-size: 26rpx;
  border-radius: 29rpx;
  background: linear-gradient(90deg,rgba(36,215,78,1) 0%,rgba(46,186,90,1) 100%);
  text-align: center;
}

.history-order-hint {
  text-align: center;
  color: #999999;
  height: 100rpx;
  line-height: 85rpx;
  font-size: 30rpx;
}

.order_empty{
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  background-color: #fff;
}

.order_empty{
  margin-top: 40px;
}

.empty_image{
  width:139px;
  height: 139px;
}

.empty_text{
  font-size: 30rpx;
  color: #999999;
  text-align: center;
  margin: 20px 20px 20px 20px;
}
